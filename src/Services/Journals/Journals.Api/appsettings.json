{
  "ConnectionStrings": {
    "Database": "redis://localhost:6379"
  },
  "JwtOptions": {
    "Issuer": "Articles",
    "Audience": "Articles",
    "Secret": "this-is-a-very-strong-secret-123!"
  },
  "GrpcServicesOptions": {
    // if needed the Retry Policy can be placed inside each service 
    "Retry": {
      "Count": 3,
      "InitialDelayMs": 2000
    },
    "Services": {
      "Person": {
        "Url": "https://auth-api:8081",
        "EnableRetry": true
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
